{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode-theme",
  "mcp": {
    "playwriter": {
      "type": "local",
      "command": ["npx", "-y", "playwriter"],
      "environment": {
        "PLAYWRITER_AUTO_ENABLE": "1"
      }
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  }
}